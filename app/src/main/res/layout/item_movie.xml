<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_movie_item"
    android:layout_marginBottom="50dp">

    <ImageView
        android:id="@+id/iv_film_poster"
        android:layout_width="150dp"
        android:layout_height="216dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_film_name"
        tools:src="@drawable/statham_for_tools"
        android:contentDescription="@string/image_description_film_poster" />

    <TextView
        android:id="@+id/tv_film_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_film_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_film_poster"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        tools:text="Гнев человеческий"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_film_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_film_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_film_poster"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        tools:text="Эйч — загадочный и холодный на вид джентльмен, но внутри него пылает жажда справедливости. Преследуя..."
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="12sp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivStarOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_film_poster"
        android:layout_marginStart="4dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/ic_star_empty"
        android:contentDescription="@string/image_description_star" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivStarTwo"
        app:layout_constraintStart_toEndOf="@id/ivStarOne"
        app:layout_constraintTop_toBottomOf="@id/iv_film_poster"
        android:layout_marginStart="@dimen/star_side_indent"
        android:layout_marginTop="132dp"
        android:background="@drawable/ic_star_empty"
        android:contentDescription="@string/image_description_star" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivStarThree"
        app:layout_constraintStart_toEndOf="@id/ivStarTwo"
        app:layout_constraintTop_toBottomOf="@id/iv_film_poster"
        android:layout_marginStart="@dimen/star_side_indent"
        android:layout_marginTop="132dp"
        android:background="@drawable/ic_star_empty"
        android:contentDescription="@string/image_description_star" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivStarFour"
        app:layout_constraintStart_toEndOf="@id/ivStarThree"
        app:layout_constraintTop_toBottomOf="@id/iv_film_poster"
        android:layout_marginStart="@dimen/star_side_indent"
        android:layout_marginTop="132dp"
        android:background="@drawable/ic_star_empty"
        android:contentDescription="@string/image_description_star" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivStarFive"
        app:layout_constraintStart_toEndOf="@id/ivStarFour"
        app:layout_constraintTop_toBottomOf="@id/iv_film_poster"
        android:layout_marginStart="@dimen/star_side_indent"
        android:layout_marginTop="132dp"
        android:background="@drawable/ic_star_empty"
        android:contentDescription="@string/image_description_star" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRating"
        android:background="@drawable/ic_circle_rating_item"
        tools:text="18+"
        app:layout_constraintTop_toBottomOf="@id/iv_film_poster"
        app:layout_constraintEnd_toEndOf="@id/iv_film_poster"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:textSize="7sp"
        tools:ignore="SmallSp" />




</androidx.constraintlayout.widget.ConstraintLayout>