<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.mtshomework.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mtshomework.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.mtshomework.MoviesFragment"
        android:label="MovieDetailsFragment" >
        <action
            android:id="@+id/action_movieFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.mtshomework.MovieFragment"
        android:label="MovieFragment" />
</navigation>